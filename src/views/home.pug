doctype html
html(lang="ko")
    head
        meta(charset="utf8")
        title Noom
        link(rel="stylesheet", href="https:/unpkg.com/mvp.css")
    body
        header
            h1 Noom
        main
            div#welcome
                form
                    input(type="text", placeholder="입장할 방이름을 입력해주세요.", required)
                    button 입장하기
                h4 공개방 목록
                    ul.public_rooms
            div#room
                h3
                ul
                form#name
                    input(type="text", placeholder="닉네임을 입력해주세요.", required)
                    button 닉네임 지정 
                form#msg
                    input(type="text", placeholder="채팅 메세지를 입력해주세요.", required)
                    button 전송
    script(src="/socket.io/socket.io.js")
    script(src="/public/js/app.js")
